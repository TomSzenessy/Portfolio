---
import { Image } from 'astro:assets';
import profileImage from '../assets/Fotos/Tom Passfoto-400.webp';
import Icon from './Icon.astro';

interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<header id="home" class="min-h-screen flex items-center justify-center py-20 mt-12">
    <div class="bg-card-bg/90 backdrop-blur-sm p-10 md:p-16 rounded-[40px] shadow-2xl border border-accent/10 text-center max-w-4xl w-full relative reveal-item active">
        <!-- Profile Image -->
        <div class="w-44 h-44 mx-auto -mt-36 mb-8 rounded-full border-8 border-white shadow-lg overflow-hidden relative z-10 bg-gradient-to-br from-accent to-orange-300">
            <Image 
                src={profileImage} 
                alt="Tom Szenessy" 
                width={176} 
                height={176} 
                loading="eager"
                class="w-full h-full object-contain hover:scale-110 transition-transform duration-500"
            />
        </div>

        <div class="space-y-6">
            <h1 class="font-heading text-5xl md:text-6xl text-text-main leading-tight" set:html={t('hero_title')} />

            <p class="text-lg text-text-muted max-w-2xl mx-auto leading-relaxed" set:html={t('hero_text')} />
            
            <p class="italic opacity-80 text-base mt-2 block">
                {t('hero_note')}
            </p>

            <div class="flex flex-wrap justify-center gap-4 pt-4">
                <a href="#projects" class="group relative px-8 py-4 bg-gradient-to-r from-accent to-orange-400 text-white rounded-full font-semibold shadow-lg shadow-accent/30 hover:shadow-xl hover:shadow-accent/40 hover:-translate-y-1 transition-all overflow-hidden">
                    <span class="relative z-10">{t('btn_see_work')}</span>
                    <div class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                </a>
                <a href="#about" class="px-8 py-4 bg-transparent border-2 border-accent/40 text-text-main rounded-full font-semibold hover:bg-accent/10 hover:-translate-y-1 transition-all">
                    <span>{t('btn_more_about')}</span>
                </a>
            </div>

            <div class="flex flex-wrap justify-center gap-3 pt-6">
                <span class="inline-flex items-center gap-2 px-4 py-2 bg-accent/10 rounded-full text-sm font-semibold text-text-main">
                    <Icon name="graduation-cap" class="text-accent" />
                    <span>{t('hero_badge_tum')}</span>
                </span>
                <span class="inline-flex items-center gap-2 px-4 py-2 bg-accent/10 rounded-full text-sm font-semibold text-text-main">
                    <Icon name="location-dot" class="text-accent" />
                    <span>{t('hero_badge_location')}</span>
                </span>
                <span class="inline-flex items-center gap-2 px-4 py-2 bg-accent/10 rounded-full text-sm font-semibold text-text-main">
                    <Icon name="heart" class="text-accent" />
                    <span>{t('hero_badge_focus')}</span>
                </span>
            </div>
        </div>


        <div class="mt-8 text-xs text-text-muted/40 italic hover:text-accent hover:opacity-100 transition-all cursor-default select-none">
            <span>{t('quote_mom_wake_up')}</span>
        </div>
    </div>
</header>
